<?xml version="1.0" encoding="UTF-8" ?>
<dependencies>
  <androidPackages>
    <!-- Use hybrid-common-ui aligned with core PurchasesHybridCommon version -->
    <androidPackage spec="com.revenuecat.purchases:purchases-hybrid-common-ui:[17.0.0]">
      <repositories>
        <repository>https://s01.oss.sonatype.org/content/repositories/snapshots/</repository>
      </repositories>
    </androidPackage>
    <!-- UI components (PaywallActivityLauncher, etc.) -->
    <androidPackage spec="com.revenuecat.purchases:purchases-ui:8.12.2" />
    <!-- AndroidX support libraries required by the bridge activity -->
    <androidPackage spec="androidx.appcompat:appcompat:1.6.1">
      <repositories>
        <repository>https://maven.google.com</repository>
      </repositories>
    </androidPackage>
    <androidPackage spec="androidx.fragment:fragment:1.6.2">
      <repositories>
        <repository>https://maven.google.com</repository>
      </repositories>
    </androidPackage>
    <androidPackage spec="androidx.activity:activity:1.8.2">
      <repositories>
        <repository>https://maven.google.com</repository>
      </repositories>
    </androidPackage>
    <!-- Jetpack Compose runtime required by purchases-ui PaywallActivity -->
    <!-- Let Gradle transitively pull Compose from purchases-ui; no explicit Compose here -->
  </androidPackages>
  
  <iosPods>
    <!-- RevenueCat Hybrid UI for iOS (aligned with core) -->
    <iosPod name="PurchasesHybridCommonUI" version="~> 17.0.0" />
  </iosPods>
</dependencies> 
